{
  "name": "todo-ssr",
  "version": "1.0.0",
  "description": "Complete fullstack Todo app - React frontend served by Express backend",
  "main": "server/server.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
    "dev:server": "cd server && npm run dev",
    "dev:client": "cd client && npm run dev",
    "build": "npm run build:client",
    "build:client": "cd client && npm run build",
    "start": "cd server && npm start",
    "install:all": "npm install && cd client && npm install && cd ../server && npm install",
    "setup": "npm run install:all && npm run build && npm start",
    "docker:build": "docker build -t todo-app .",
    "docker:run": "docker run -p 3000:3000 todo-app",
    "docker:compose": "docker-compose up -d",
    "docker:compose:down": "docker-compose down"
  },
  "keywords": ["todo", "react", "express", "fullstack"],
  "author": "BomScoob",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
} 